extends layout
block content
    div.row
        div.col-md-4.col-centered
            div.panel.panel-primay
                div.panel-heading
                    h3.panel-title Sign in
                div.panel-body
                    form(method='post')
                        div.form-group
                            label(for='id_username') Username
                            input.form-control(type='text')
                            label(for='password') Password
                            input.form-control(type='password')
                        input.btn.btn-default(type='submit' value='Log in')