extends layout
block content
    section.content-header
        h1 All courses
    section.content
        div.row
            -for (var x = 0; x < courses.length; x++)
                div.col-lg-3.col-xs-6
                    div.small-box.bg-aqua
                        div.inner
                            h3 #{courses[x].title}
                            p #{courses[x].questionCount} Exercises
                        div.icon
                            i.ion.ion-android-book
                        a.small-box-footer(href='/#{courses[x].url}/play') Go to course
                            i.fa.fa-arrow-circle-right