extends layout
block content
    div.row
        div.col-md-8
            div.panel.panel-primary
                div.panel-heading
                    h3.panel-title Add a new question
                div.panel-body
                    form.form-group(method="post", action="/quizManager/submitQuestion")
                        label Question:
                        input.form-control(type="text", name="question", placeholder="Type the question here").span6
                        label Correct Answer:
                        input.form-control(type="text", name="correctAnswer", placeholder="Type correct answer").span4
                        label Wrong Answer 1:
                        input.form-control(type="text", name="wrongAnswer1", placeholder="Type wrong answer 1").span4
                        label Wrong Answer 2:
                        input.form-control(type="text", name="wrongAnswer2", placeholder="Type wrong answer 2").span4
                        label Wrong Answer 3:
                        input.form-control(type="text", name="wrongAnswer3", placeholder="Type wrong answer 3").span4
                        br
                        div.btn-group.pull-right
                            input.btn.btn-default(type="button", value="Cancel", name="resetFormButton")
                            input.btn.btn-primary(type="Submit", value="Add Question")