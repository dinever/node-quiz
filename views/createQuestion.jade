extends layout
block head
    link(href="../../css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css",rel="stylesheet",type="text/css")
block content
    section.content-header
        h1 Add a new exercise
    section.content
        div.row
            div.col-md-6
                div.box
                    div.box-header
                        h3.box-title Lecture
                    div.box-body.pad
                        form
                            textarea.textarea(style='width: 100%; height: 347px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;') This is my textarea to be replaced with CKEditor.
            div.col-md-6
                div.box.box-primary
                    div.box-header
                        div.box-title Question
                    form.form-group(method="post", action="/admin/submitQuestion")
                        div.box-body
                            label Question:
                            input.form-control(type="text", name="question", placeholder="Type the question here").span6
                            label Correct Answer:
                            input.form-control(type="text", name="correctAnswer", placeholder="Type correct answer").span4
                            label Wrong Answer 1:
                            input.form-control(type="text", name="wrongAnswer1", placeholder="Type wrong answer 1").span4
                            label Wrong Answer 2:
                            input.form-control(type="text", name="wrongAnswer2", placeholder="Type wrong answer 2").span4
                            label Wrong Answer 3:
                            input.form-control(type="text", name="wrongAnswer3", placeholder="Type wrong answer 3").span4
                            br
                        div.box-footer
                            input.btn.btn-primary(type="Submit", value="Add Question")
                            input.btn.btn-default(type="button", value="Cancel", name="resetFormButton")
block script
    script(src="/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js",type="text/javascript")
    script(type="text/javascript").
        $(function() {
            $(".textarea").wysihtml5();
        });