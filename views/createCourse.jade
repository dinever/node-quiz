extends layout
block content
    div.row
        div.col-md-8
            div.panel.panel-primary
                div.panel-heading
                    h3.panel-title Add a new course
                div.panel-body
                    form.form-group(method="post", action="/admin/submitCourse")
                        label Title:
                        input.form-control(type="text", name="title", placeholder="Type the question here").span6
                        label Description:
                        input.form-control(type="text", name="description", placeholder="Type correct answer").span4
                        br
                        div.btn-group.pull-right
                            input.btn.btn-default(type="button", value="Cancel", name="resetFormButton")
                            input.btn.btn-primary(type="Submit", value="Add Course")