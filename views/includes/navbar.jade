nav.navbar.navbar-static-top(role='navigation')
    div.navbar-right
        if user
            ul.nav.navbar-nav
                li.dropdown.tasks-menu
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        i.fa.fa-tasks
                        span.label.label-danger 9
                    ul.dropdown-menu
                        li.header You have 9 tasks
                        li
                            ul.menu
                                li
                                    a(href='#')
                                        h3 政治
                                            small.pull-right 20%
                                        div.progress.xs
                                            div.progress-bar.progress-bar-aqua(style='width:20%', role='progressbar')
                                                span.sr-only 20% Complete
                        li.footer
                            a(href='#') View all courses.
                    li.dropdown.user.user-menu
                        a.dropdown-toogle(href='#', data-toggle='dropdown')
                            i.glyphicon.glyphicon-user
                            span User
                                i.caret
                        ul.dropdown-menu
                            li.user-header.bg-light-blue
                                img.img-circle(src='/img/avatar3.png', alt='User Image')
                                p #{user.username}
                            li.user-footer
                                div.pull-left
                                    a.btn.btn-default.btn-flat Profile
                                div.pull-right
                                    a.btn.btn-default.btn-flat Sign out
        else
            a.btn.btn-default.navbar-btn(href='/admin/login',style='margin-right:10px') Sign in
            a.btn.btn-default.navbar-btn(href='/admin/register') Sign up